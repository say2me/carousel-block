	"main": "",
	"scripts": {
		"test:php": "./vendor/bin/phpunit",
    	"test:coverage:php": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-text --colors=never",
    	"test:coverage:php:clover": "WP_MULTISITE=1 XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-clover ./build/logs/clover.xml",
    	"test:coverage:php:percentage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --verbose --coverage-text | grep -E '^\\s*Lines:\\s*(\\d+.\\d+)\\%' | awk {'print $2'}",
    	"test:coverage:all": "npm-run-all --parallel test:coverage:php",
    	"cs:php": "./vendor/bin/phpcs ./carousel.php ./tests/phpunit/tests"
	}
}
